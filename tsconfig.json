{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strictPropertyInitialization": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,  /* enable all strict type-checking options */
		"allowJs": true, /* enables importing of JavaScript files */
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"out"
	]
}
